{
  "version": 2,
  "builds": [
    {
      "src": "public/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/api/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "DB_HOST": "@db_host",
    "DB_NAME": "@db_name", 
    "DB_USER": "@db_user",
    "DB_PASS": "@db_pass"
  }
}
